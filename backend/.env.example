# 開発環境
# DEBUG=true

# 本番環境
DEBUG=false

# Firebase Configuration
FIREBASE_PROJECT_ID=sample-fastapi
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@sample-fastapi.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your-client-cert-url

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=FastAPI Backend
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Environment
ENVIRONMENT=development

# Development environment Firebase Emulator settings
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# 例：営業時間を変更
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="21:00"

# 例：予約制限を緩和
MAX_CONCURRENT_RESERVATIONS=10
RESERVATION_ADVANCE_DAYS=7

